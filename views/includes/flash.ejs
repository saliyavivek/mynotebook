<% if(success && success.length) { %>
<div class="message-box success alert alert-dismissible fade show" role="alert"">
  <p><%= success %></p>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error && error.length) { %>
    <div class="message-box failure alert alert-dismissible fade show" role="alert"">
      <p><%= error %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(warn && warn.length) { %>
    <div class="message-box warn alert alert-dismissible fade show" role="alert"">
      <p><%= warn %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>