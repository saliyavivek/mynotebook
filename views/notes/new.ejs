<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>New note</h3>
    <form action="/notes" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          class="form-control"
          id="title"
          type="text"
          name="note[title]"
          placeholder="Give your note a title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please give your note a title!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="note[description]"
          cols="30"
          rows="10"
          placeholder="Write your note content here"
          class="form-control"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">You forgot to add description!</div>
      </div>
      <div class="mb-3">
        <label for="tag" class="form-label">Tag</label>
        <input
          type="text"
          name="note[tag]"
          placeholder="Add a tag to organize your note (optional)"
          class="form-control"
          id="tag"
        />
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
          name="note[isPrivate]"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Private</label
        >
      </div>
      <br />
      <button class="btn btn-dark btn-custom">Create</button> &nbsp;&nbsp;
      <a href="/notes" class="btn btn-dark">Cancel</a>
    </form>
  </div>
</div>
